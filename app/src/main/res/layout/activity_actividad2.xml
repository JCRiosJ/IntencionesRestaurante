<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/hacerOtraReservacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="hacerOtraReserva"
        android:text="Hacer Otra Reservacion"
        android:layout_below="@+id/btnLlamada"
        android:layout_alignParentLeft="true"
        />

    <Button
        android:id="@+id/btnWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PÃ¡gina web"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:onClick="pagWeb"/>

    <Button
        android:id="@+id/btnLlamada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llamar"
        android:layout_below="@+id/btnFoto"
        android:layout_alignParentRight="true"
        android:onClick="llamar"/>

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:layout_below="@+id/btnWeb"
        android:layout_alignParentRight="true"
        android:onClick="mapa"/>

    <Button
        android:id="@+id/btnFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomar foto"
        android:layout_below="@+id/btnMail"
        android:layout_alignParentRight="true"
        android:onClick="foto"/>

    <Button
        android:id="@+id/btnMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar e-mail"
        android:layout_below="@+id/btnMaps"
        android:layout_alignParentRight="true"
        android:onClick="mail"/>

    <TextView
        android:id="@+id/muestraDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

</RelativeLayout>
